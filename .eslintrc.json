{
    "extends": ["eslint:recommended", "plugin:react/recommended"],
     "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "rules": {
		"indent": ["error", "tab"],
		"max-len": ["warn", 240]
	},
    "env": {
        "browser": true,
        "node": true,
        "mocha": true
    },

    "globals": {
        "React": true
    },

    "plugins": [
        "react"
    ]
}