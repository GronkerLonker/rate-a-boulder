{
  "name": "rate-a-boulder",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/GronkerLonker/rate-a-boulder.git"
  },
  "config": {
  	"distFilesJspm": "app/config.js app/bundle* app/jspm_packages",
  	"distFilesAssets": "app/assets"
  },
  "scripts": {
    "// CLEANING": "",
    "clean:ui": "rm -rf $npm_package_config_distFilesAssets $npm_package_config_distFilesJspm",
    "clean": "rm -rf app",
    "// SETUP": "",
    "presetup": "npm run clean",
    "setup": "jspm install && npm install",
    "// LINTING": "",
    "lint:ui": "eslint public/js/src",
    "prebuild:ui": "npm run lint:ui",
    "// UI BUILD": "",
    "jspm": "jspm bundle src/tavern app/bundle.js",
    "postjspm": "cp -R public/js/jspm_packages app && cp public/js/config.js app",
    "copy:assets": "cp -R ./public/assets app",
    "build:ui": "npm run copy:assets && npm run jspm",
    "// UI REBUILD ONLY UI SPECIFIC FILES": "",
    "prerebuild:ui": "npm run clean:ui",
    "rebuild:ui": "npm run build:ui",
    "// SERVER BUILD": "",
    "lint:server": "eslint src",
    "prebuild:server": "npm run lint:server",
    "build:server": "./node_modules/.bin/babel src -d app",
    "prebuild": "npm run clean",
    "build": "npm run build:server && npm run build:ui",
    "// TESTS": "",
    "pretest": "npm run build",
    "test": "echo success",
    "// RUN THE SERVER": "",
    "start": "node app/server.js",
    "restart:server": "npm run build:server && npm run start",
    "// ONE FOR ALL": "",
    "precomplete": "npm run test",
    "complete": "npm run start",
    "// WATCHING": "",
    "watch:ui": "watch 'npm run rebuild:ui && echo === watching ==='  ./public/assets ./public/js/src --wait=1",
    "// NODE ENV HELPER": "",
    "env": "env"
  },
  "dependencies": {
    "body-parser": "^1.15.2",
    "express": "^4.14.0",
    "lokijs": "^1.3.19",
    "method-override": "^2.3.6",
    "promise": "^7.1.1"
  },
  "devDependencies": {
    "babel-cli": "^6.10.1",
    "babel-preset-es2015": "^6.9.0",
    "eslint": "^2.13.1",
    "eslint-config-google": "^0.6.0",
    "jspm": "^0.16.39",
    "watch": "^0.19.1"
  },
  "jspm": {
    "directories": {
      "baseURL": "public/js"
    },
    "dependencies": {
      "immstruct": "npm:immstruct@^2.0.0",
      "omniscient": "npm:omniscient@^4.1.1",
      "react": "npm:react@^15.2.0"
    },
    "devDependencies": {
      "babel": "npm:babel-core@^5.8.24",
      "babel-runtime": "npm:babel-runtime@^5.8.24",
      "core-js": "npm:core-js@^1.1.4"
    }
  }
}
