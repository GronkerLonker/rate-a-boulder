{
  "name": "rate-a-boulder",
  "version": "0.0.1",
  "license": "BSD-2-Clause",
  "repository": {
    "type": "git",
    "url": "https://github.com/GronkerLonker/rate-a-boulder.git"
  },
  "scripts": {
    "// SETUP": "",
    "setup": "npm prune && npm install -p",
    "// CLEANING": "",
    "clean": "rm -rf build && mkdir -p build/assets && rm -rf app && mkdir -p app",
    "// LINTING": "",
    "lint:ui": "eslint public/js/src",
    "lint:server": "eslint src",
    "lint": "npm run lint:ui && npm run lint:server",
    "// BUILD": "",
    "build:ui:prod": "browserify public/js/src/tavern.js -t [ babelify --presets [ env] ] -g [ envify --NODE_ENV production ] -g uglifyify | uglifyjs --compress --mangle > build/assets/bundle.js",
    "build:ui:dev": "browserify public/js/src/tavern.js -o build/assets/bundle-debug.js -t [ babelify --presets [ env] ]",
    "build:ui": "npm run build:ui:dev",
    "build:server": "./node_modules/.bin/babel src -d build",
    "build": "npm run build:ui && npm run build:server",
    "// TESTS": "",
    "test:unit": "mocha",
    "test": "npm run test:unit",
    "// APP BUNDLING": "",
    "copy:assets": "cp -R ./public/assets app",
    "copy:build": "cp -R build/* app",
    "bundle": "npm run copy:assets && npm run copy:build",
    "// RUN THE SERVER": "",
    "start": "node app/server.js | bunyan",
    "// ONE FOR ALL": "",
    "complete": "npm run setup && npm run clean && npm run lint && npm run build && npm run test && npm run bundle && npm run start"
  },
  "dependencies": {
    "body-parser": "^1.15.2",
    "bunyan": "^1.8.1",
    "express": "^4.14.0",
    "lokijs": "^1.3.19",
    "method-override": "^2.3.6",
    "promise": "^7.1.1",
    "react": "^16.3.0",
    "react-dom": "^16.3.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-register": "^6.24.1",
    "babelify": "^8.0.0",
    "browserify": "^14.4.0",
    "chai": "^3.5.0",
    "envify": "^4.1.0",
    "eslint": "^2.13.1",
    "eslint-config-google": "^0.6.0",
    "eslint-plugin-react": "^5.2.2",
    "mocha": "^3.2.0",
    "mochawesome": "^2.0.5",
    "sinon": "^2.1.0",
    "uglify-js": "^2.8.29",
    "uglifycss": "0.0.27",
    "uglifyify": "^4.0.5",
    "watch": "^0.19.1"
  }
}
